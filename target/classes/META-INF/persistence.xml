<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="miUnidadDePersistencia">

    <!-- Proveedor JPA -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <!-- Clases de entidad -->
    <class>logica.Joya</class> <!-- Cambia según tus entidades -->
    <class>logica.CategoriaVerificacion</class>


    <properties>
      <!-- Configuración de Hibernate -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="validate"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="false"/>

      <!-- Configuración de conexión a la base de datos -->
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://marihel.ck38iw4amrdb.us-east-1.rds.amazonaws.com:3306/marihel"/>
      <property name="jakarta.persistence.jdbc.user" value="admin"/>
      <property name="jakarta.persistence.jdbc.password" value="mariheljoyas"/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

      <!-- Pool de Conexiones HikariCP -->
      <property name="hibernate.hikari.minimumIdle" value="2"/>
      <property name="hibernate.hikari.maximumPoolSize" value="10"/>
      <property name="hibernate.hikari.idleTimeout" value="30000"/>
      <property name="hibernate.hikari.connectionTimeout" value="20000"/>
      <property name="hibernate.hikari.maxLifetime" value="1800000"/>
    </properties>

  </persistence-unit>
</persistence>
